<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="/js/jssor.slider-21.1.6.mini.js" type="text/javascript"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <% include cores/header.ejs %>


    <div class="container">
        <% if(products){
            %>

        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <ul class="list-group">
                   <% for (var i = 0; i < products.length; i++) { %>
                    <li class="list-group-item">
                        <span class="badge"><%= products[i].qty%></span>
                        <span style="font-weight: bold"><%= products[i].item.products_name%></span>
                        <span class="label label-success">€<%= products[i].price%></span>

                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
                <strong>Sub-Total: €<%= totalPrice %></strong>
            </div>
            <%
                var tax = totalPrice *16 / 100;
             %>
            <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
                <strong>Tax (16%): €<%= tax %></strong>
            </div>
            <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
                <strong>Total: €<%= tax+totalPrice %></strong>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
                <a href="/cart/checkout" class="btn btn-success">Checkout</a>
            </div>
        </div>

        <%
        }else{
            %>
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                    <h2>No Items in Cart yet!</h2>
                </div>
            </div>
        <%
        } %>

        <hr>


    </div>

    <% include cores/footer.ejs %>
